<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaaaain.mapper.RatingDimensionsMapper">

    <!--查询单个-->
    <select id="queryById" resultType="com.jaaaain.entity.RatingDimensions">
        select *
        from rating_dimensions
        where dimension_id = #{dimensionId}
    </select>

    <!--查询指定行数据-->
    <select id="queryByLimit" resultType="com.jaaaain.entity.RatingDimensions">
        select *
        from rating_dimensions
        <where>
            <if test="dimensionId != null">
                and dimension_id = #{dimensionId}
            </if>
            <if test="dimensionName != null and dimensionName != ''">
                and dimension_name = #{dimensionName}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="dimensionId" useGeneratedKeys="true">
        insert into rating_dimensions(dimension_namedescriptionstatus)
        values (#{dimensionName}#{description}#{status})
    </insert>

    <insert id="insertBatch" keyProperty="dimensionId" useGeneratedKeys="true">
        insert into rating_dimensions(dimension_namedescriptionstatus)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.dimensionName}#{entity.description}#{entity.status})
        </foreach>
    </insert>

    <insert id="UpdateBatch" keyProperty="dimensionId" useGeneratedKeys="true">
        insert into rating_dimensions(dimension_namedescriptionstatus)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.dimensionName}#{entity.description}#{entity.status})
        </foreach>
        on duplicate key update
dimension_name = values(dimension_name)description = values(description)status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rating_dimensions
        <set>
            <if test="dimensionName != null and dimensionName != ''">
                dimension_name = #{dimensionName},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where dimension_id = #{dimensionId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rating_dimensions where dimension_id = #{dimensionId}
    </delete>

</mapper>

