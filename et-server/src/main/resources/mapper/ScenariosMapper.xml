<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaaaain.mapper.ScenariosMapper">

    <!--查询单个-->
    <select id="queryById" resultType="com.jaaaain.entity.Scenarios">
        select *
        from scenarios
        where scenario_id = #{scenarioId}
    </select>

    <!--查询指定行数据-->
    <select id="queryByLimit" resultType="com.jaaaain.entity.Scenarios">
        select *
        from scenarios
        <where>
            <if test="scenarioId != null">
                and scenario_id = #{scenarioId}
            </if>
            <if test="scenarioName != null and scenarioName != ''">
                and scenario_name = #{scenarioName}
            </if>
            <if test="description != null and description != ''">
                and description = #{description}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="scenarioId" useGeneratedKeys="true">
        insert into scenarios(scenario_namedescriptionstatus)
        values (#{scenarioName}#{description}#{status})
    </insert>

    <insert id="insertBatch" keyProperty="scenarioId" useGeneratedKeys="true">
        insert into scenarios(scenario_namedescriptionstatus)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.scenarioName}#{entity.description}#{entity.status})
        </foreach>
    </insert>

    <insert id="UpdateBatch" keyProperty="scenarioId" useGeneratedKeys="true">
        insert into scenarios(scenario_namedescriptionstatus)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.scenarioName}#{entity.description}#{entity.status})
        </foreach>
        on duplicate key update
scenario_name = values(scenario_name)description = values(description)status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update scenarios
        <set>
            <if test="scenarioName != null and scenarioName != ''">
                scenario_name = #{scenarioName},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where scenario_id = #{scenarioId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from scenarios where scenario_id = #{scenarioId}
    </delete>

</mapper>

